<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.1" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
      
    <persistence-unit name="UPOEventsPU" transaction-type="RESOURCE_LOCAL">
            
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
            
        <class>modelo.entidades.Valoracion</class>
        <class>modelo.entidades.Asistente</class>
        <class>modelo.entidades.Bloqueo</class>
        <class>modelo.entidades.Usuario</class>
        <class>modelo.entidades.Peticion</class>
        <class>modelo.entidades.Reporte</class>
        <class>modelo.entidades.Evento</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
            
        <properties>
                  
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/upoevents?zeroDateTimeBehavior=CONVERT_TO_NULL"/>
                  
            <property name="javax.persistence.jdbc.user" value="root"/>
                  
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
                  
            <property name="javax.persistence.jdbc.password" value=""/>
                
        </properties>
          
    </persistence-unit>
    
</persistence>
